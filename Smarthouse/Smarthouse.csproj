<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <ProduceReferenceAssembly>true</ProduceReferenceAssembly>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Xamarin.Forms" Version="4.6.0.772" />
    <PackageReference Include="Xamarin.Essentials" Version="1.5.3.2" />
    <PackageReference Include="sqlite-net-pcl" Version="1.7.335" />
  </ItemGroup>
  <ItemGroup>
    <Compile Remove="DeviceList.cs" />
  </ItemGroup>
  <ItemGroup>
    <None Remove="smartHouse.db" />
  </ItemGroup>
  <ItemGroup>
    <None Update="smartHouse.db">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <LogicalName>Smarthouse.smartHouse.db</LogicalName>
    </None>
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="smartHouse.db">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
  </ItemGroup>
</Project>